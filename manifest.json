{
    "name": "Weather App / Alarm Timer",
    "description": "A weather App to get current temperature with City and State from USA plus Alaram Timer",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "./weatherApp/index.html",
        "default_icon": "./weatherApp/icon_images/icon_128.png"
    },
    "icons":{
        "16": "./weatherApp/icon_images/icon_16.png",
        "48": "./weatherApp/icon_images/icon_48.png",
        "128": "./weatherApp/icon_images/icon_128.png"
    },
    "background":{
        "scripts": ["./alertTimer/backgroundAlarm.js"],
        "persistent": false
    },
    "permissions": ["activeTab", "alarms"]
}